{
  "manifest_version": 3,
  "name": "AI Chatbot Assistant",
  "version": "1.0",
  "description": "Advanced AI chatbot with multiple models, voice capabilities, and persistent memory",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "Open AI Chatbot"
  }
}